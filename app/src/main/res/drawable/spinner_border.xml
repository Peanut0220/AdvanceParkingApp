<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border and background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="2dp"
                android:color="#FF5722" /> <!-- Border color and width -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- Dropdown arrow icon on the right -->
    <item android:right="8dp" android:gravity="end|center_vertical">
        <bitmap
            android:src="@drawable/ic_arrow_down"
           android:gravity="center" />
    </item>
</layer-list>